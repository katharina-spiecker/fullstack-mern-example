{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ES2022",
      "rootDir": "./",
      "outDir": "../dist",
      "strict": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["./**/*.ts"],
    "exclude": ["../node_modules", "../dist"]
}  